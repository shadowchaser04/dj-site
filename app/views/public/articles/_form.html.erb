<%= form_for([:public, @article]) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% @article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!--Content Left-->
  <div class="container__article_form">

    <div class="article_form__field">
      <%= form.label :title %><br>
      <%= form.text_field :title %><br>

      <br>
      <%= form.label :categories %><br>
      <%= form.collection_select(:category_id, Category.all, :id, :name) %><br>

      <br>
      <%= form.label :"draft/publish" %><br>
      <%= form.check_box :published, class: "form-control" %><br>

      <br>
      <%= form.fields_for :pictures do |pic| %>
        <%= form.label :image %><br>
        <%= pic.text_field :name %>
      <% end %>

      <br>
      <br>
      <%= form.submit %>
    </div>

    <!--Content Right-->
    <div class="article_form__field">
      <%= form.text_area :content %>
    </div>

  </div>

<% end %>
