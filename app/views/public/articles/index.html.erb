<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Pagecount</th>
      <th>Published at</th>
      <th>Published</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= article.pagecount %></td>
        <td><%= article.published_at %></td>
        <td><%= article.published %></td>
        <td><%= article.category_id %></td>
        <td><%= link_to 'Show', public_article_path(article) %></td>
        <td><%= link_to 'Edit', edit_public_article_path(article) %></td>
        <td><%= link_to 'Destroy', public_article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_public_article_path %>

<%= will_paginate @articles %>
